{
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "./backend/src/main/resources/Dockerfile",
    "buildContext": "."
  },
  "deploy": {
    "startCommand": "java -jar -Dspring.profiles.active=prod app.jar",
    "healthcheckPath": "/actuator/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckTimeout": 300
  }
}
