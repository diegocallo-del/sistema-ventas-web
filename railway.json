{
  "build": {
    "builder": "dockerfile",
    "buildContext": "./backend",
    "dockerfilePath": "./Dockerfile"
  },
  "deploy": {
    "startCommand": "java -jar -Dspring.profiles.active=prod app.jar",
    "healthcheckPath": "/actuator/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
